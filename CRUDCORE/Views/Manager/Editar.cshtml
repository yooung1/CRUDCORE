@model ContatoModel;

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Editar Contato</h5>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Manager" method="post">
            <input asp-for="IdContato" type="hidden" class="form-control" />
            <div class="form-group">
                <label class="form-label">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Telefone</label>
                <input asp-for="Telefone" type="text" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Listar" asp-controller="Manager" class="btn btn-warning">Voltar a lista</a>
        </form>
    </div>
</div>